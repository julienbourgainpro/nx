{
  "name": "react-native",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react-native/src",
  "projectType": "library",
  "targets": {
    "build": {
      "dependsOn": [
        {
          "target": "build-base",
          "projects": "self"
        }
      ]
    },
    "copy-assets": {
      "executor": "@nx/workspace-plugin:copy-assets",
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          "packages/react-native/*.md",
          {
            "input": "packages/react-native",
            "glob": "**/files/**/.babelrc.template",
            "output": "/"
          },
          {
            "input": "packages/react-native/src",
            "glob": "**/!(*.ts)",
            "output": "/src"
          },
          {
            "input": "packages/react-native",
            "glob": "**/*.json",
            "ignore": ["**/tsconfig*.json"],
            "output": "/"
          },
          {
            "input": "packages/react-native",
            "glob": "**/*.d.ts",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    },
    "copy-readme": {
      "outputs": ["{workspaceRoot}/dist/packages/react-native/README.md"],
      "command": "node ./scripts/copy-readme.js react-native",
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    },
    "build-base": {
      "dependsOn": [
        "^build",
        {
          "target": "build-base-ts",
          "projects": "self"
        },
        {
          "target": "copy-assets",
          "projects": "self"
        },
        {
          "target": "copy-readme",
          "projects": "self"
        }
      ]
    }
  }
}
