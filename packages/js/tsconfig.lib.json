{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist/packages/js",
    "declaration": true,
    "types": ["node"],
    "composite": true,
    "noEmit": false
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "./src/**/test-fixtures/**/*",
    "jest.config.ts"
  ],
  "include": ["**/*.ts"],
  "references": [
    {
      "path": "../workspace/tsconfig.lib.json"
    },
    {
      "path": "../devkit/tsconfig.lib.json"
    }
  ]
}
