{
  "name": "create-nx-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/create-nx-plugin",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/dist/packages/create-nx-plugin/bin/create-nx-plugin.js",
        "{workspaceRoot}/dist/packages/create-nx-plugin/README.md"
      ],
      "options": {
        "commands": [
          {
            "command": "node ./scripts/chmod dist/packages/create-nx-plugin/bin/create-nx-plugin.js"
          },
          {
            "command": "node ./scripts/copy-readme.js create-nx-plugin"
          },
          {
            "command": "node ./scripts/replace-versions.js dist/packages/create-nx-plugin/bin/create-nx-plugin.js"
          }
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build-base",
          "projects": "self"
        }
      ]
    },
    "copy-assets": {
      "executor": "@nx/workspace-plugin:copy-assets",
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          {
            "input": "packages/create-nx-plugin",
            "glob": "**/files/**",
            "output": "/"
          },
          {
            "input": "packages/create-nx-plugin",
            "glob": "**/files/**/.gitkeep",
            "output": "/"
          },
          {
            "input": "packages/create-nx-plugin",
            "glob": "**/*.json",
            "ignore": ["**/tsconfig*.json", "project.json", ".eslintrc.json"],
            "output": "/"
          },
          {
            "input": "packages/create-nx-plugin",
            "glob": "**/*.js",
            "ignore": ["**/jest.config.js"],
            "output": "/"
          },
          {
            "input": "packages/create-nx-plugin",
            "glob": "**/*.d.ts",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          }
        ]
      },
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    },
    "build-base": {
      "dependsOn": [
        "^build",
        {
          "target": "build-base-ts",
          "projects": "self"
        },
        {
          "target": "copy-assets",
          "projects": "self"
        },
        {
          "target": "add-package-json-fields",
          "projects": "self"
        }
      ]
    },
    "add-package-json-fields": {
      "executor": "@nx/workspace-plugin:add-package-json-fields",
      "dependsOn": [
        {
          "target": "copy-assets",
          "projects": "self"
        }
      ]
    }
  },
  "implicitDependencies": ["plugin"]
}
