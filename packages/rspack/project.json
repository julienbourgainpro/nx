{
  "name": "rspack",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/rspack/src",
  "projectType": "library",
  "targets": {
    "build": {
      "dependsOn": [
        {
          "target": "build-base",
          "projects": "self"
        }
      ]
    },
    "copy-assets": {
      "executor": "@nx/workspace-plugin:copy-assets",
      "options": {
        "tsConfig": "./tsconfig.lib.json",
        "assets": [
          "packages/rspack/*.md",
          {
            "input": "./packages/rspack/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/rspack/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/rspack",
            "glob": "**.json",
            "output": ".",
            "ignore": ["**/tsconfig*.json", "project.json", ".eslintrc.json"]
          },
          "LICENSE"
        ]
      },
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    },
    "copy-readme": {
      "outputs": ["{workspaceRoot}/dist/packages/rspack/README.md"],
      "command": "node ./scripts/copy-readme.js rspack",
      "dependsOn": [
        {
          "target": "build-base-ts",
          "projects": "self"
        }
      ]
    },
    "build-base": {
      "dependsOn": [
        "^build",
        {
          "target": "build-base-ts",
          "projects": "self"
        },
        {
          "target": "copy-assets",
          "projects": "self"
        },
        {
          "target": "copy-readme",
          "projects": "self"
        },
        {
          "target": "add-package-json-fields",
          "projects": "self"
        }
      ]
    },
    "nx-release-publish": {},
    "add-package-json-fields": {
      "executor": "@nx/workspace-plugin:add-package-json-fields",
      "dependsOn": [
        {
          "target": "copy-assets",
          "projects": "self"
        }
      ]
    }
  },
  "tags": []
}
